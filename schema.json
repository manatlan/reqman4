{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scenario Schema",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "RUN": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      },
      "additionalProperties": true
    },
    {
      "type": "array",
      "items": {
        "$ref": "#/definitions/step"
      }
    }
  ],
  "definitions": {
    "step": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/definitions/httpStep" },
        { "$ref": "#/definitions/callStep" },
        { "$ref": "#/definitions/setStep" }
      ],
      "properties": {
        "params": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "object" }
            }
          ]
        }
      }
    },
    "httpStep": {
      "type": "object",
      "properties": {
        "GET": { "type": "string" },
        "POST": { "type": "string" },
        "PUT": { "type": "string" },
        "PATCH": { "type": "string" },
        "DELETE": { "type": "string" },
        "HEAD": { "type": "string" },
        "OPTIONS": { "type": "string" },
        "doc": { "type": "string" },
        "headers": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "body": {},
        "tests": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "anyOf": [
        { "required": ["GET"] },
        { "required": ["POST"] },
        { "required": ["PUT"] },
        { "required": ["PATCH"] },
        { "required": ["DELETE"] },
        { "required": ["HEAD"] },
        { "required": ["OPTIONS"] }
      ]
    },
    "callStep": {
      "type": "object",
      "properties": {
        "CALL": { "type": "string" }
      },
      "required": ["CALL"]
    },
    "setStep": {
      "type": "object",
      "properties": {
        "SET": { "type": "object" }
      },
      "required": ["SET"]
    }
  }
}